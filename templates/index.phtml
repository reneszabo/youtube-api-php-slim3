    }
    .side-footer > button:hover {
      transform: scale(1.1);
    }
    p > button {
      background: none!important;
      font: inherit;
      padding: 5px 30px!important;
      border: 2px solid #f44336!important;
      color: #e91e63!important;
      transition: all 0.3s ease-out;
    }
    p > button:focus {
